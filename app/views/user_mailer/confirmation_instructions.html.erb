<% provide(:header, "Thank you for registering!") %>
<% content_for :body do %>
  <p>Welcome <%= @resource.name %>!</p>
  <p>You can confirm your account email through the link below:</p>
  <p><%= link_to 'Confirm my account', confirmation_url(@resource, confirmation_token: @token, subdomain: @organization.subdomain) %></p>
<% end %>
<%= render 'shared_mailer/mailer_template' %>
