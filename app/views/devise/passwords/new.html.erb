<% provide(:title, "Forgot Password") %>

<% content_for :form do %>
  <div class="float-form-content">
    <h4>Forgot your password?</h4>
    <%= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= f.input :login, label: false, placeholder: "Login Email / Phone" %>
      <%= f.submit "Send Reset Instructions", class: 'btn btn-info' %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
