<% provide(:title, "Change Password") %>

<% content_for :form do %>
  <div class="float-form-content">
    <h4>Change your password?</h4>
    <%= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.input :password, label: "New Password", as: :password %>
      <%= f.input :password_confirmation, label: "Re-enter New Password", as: :password %>
      <%= f.submit "Change my password", class: 'btn btn-info' %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
