<div class="panel panel-success">
  <div class="panel-heading">
    <h4 class="panel-title">
      Custom Applications
      <span class='pull-right'>
        <%= link_to 'New Application', new_organization_custom_form_path(@current_profile), class: "btn btn-xs btn-success" %>
      </span>
    </h4>
  </div>
  <table class="table table-condensed table-hover table-responsive">
    <tr>
      <th class='text-center'><i class="fa fa-search"></i></th>
      <th>Title</th>
      <th class='text-center'>Questions</th>
      <th class='text-center'>Responses</th>
      <th class='text-center'>Revised By</th>
      <th class='text-center'>Revised</th>
      <th><i class="fa fa-trash-o"></i></th>
    </tr>
    <tbody>
      <% @forms.each do |form| %>
        <tr>
          <td class='text-center'>
            <%= link_to organization_custom_form_preview_path(@current_profile, form) do %>
              <i class="fa fa-file-text-o"></i>
            <% end %>
          </td>
          <td><%= link_to form.title, edit_organization_custom_form_path(@current_profile, form) %></td>
          <td class='text-center'><%= form.questions.count %></td>
          <td class='text-center'><%= form.responses.count %></td>
          <td class='text-center'><%= form.author %></td>
          <td class='text-center'><%= form.updated_at.try(:strftime, "%m/%d/%Y") %></td>
          <td>
            <%= link_to organization_custom_form_path(@current_profile, form), method: :delete, class: "destroy", remote: true do %>
              <i class="fa fa-trash-o"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

