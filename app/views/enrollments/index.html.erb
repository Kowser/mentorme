<div class="panel panel-success">
  <div class="panel-heading">
    <h4 class="panel-title">Custom Onboarding
      <span class='pull-right'>
        <%= link_to 'Create New Onboarding Process', new_organization_enrollment_path(@current_profile), class: "btn btn-xs btn-success" %>
      </span>
    </h4>
  </div>
  <table class="table table-condensed table-hover table-responsive">
    <tr>
      <th class='text-center'><i class="fa fa-search"></i></th>
      <th>Onboarding for</th>
      <th class='text-center'>Steps</th>
      <th class='text-center'>Active</th>
      <th class='text-center'>Progress</th>
      <th class='text-center'>Author</th>
      <th class='text-center'>Revised</th>
      <th><i class="fa fa-trash-o"></i></th>
    </tr>
    <tbody>
      <% @enrollments.each do |enrollment| %>
        <tr>
          <td class='text-center'>
            <%= link_to organization_enrollment_preview_path(@current_profile, enrollment) do %>
              <i class="fa fa-file-text-o"></i>
            <% end %>
          </td>
          <td><%= link_to Collections::USER_TYPES[enrollment.user_type], edit_organization_enrollment_path(@current_profile, enrollment) %></td>
          <td class='text-center'><%= enrollment.steps.count %></td> 
          <td class='text-center'><%= enrollment.active ? "Yes" : "No" %></td>
          <td class='text-center'><%= enrollment.active ? (link_to 'Report', organization_enrollment_report_path(@current_profile, enrollment)) : 'Inactive' %></td>
          <td class='text-center'><%= enrollment.author %></td>
          <td class='text-center'><%= enrollment.updated_at.try(:strftime, "%m/%d/%Y") %></td>
          <td>
            <%= link_to organization_enrollment_path(@current_profile, enrollment), method: :delete, class: "destroy", remote: true do %>
              <i class="fa fa-trash-o"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
